<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reg_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    tools:context="com.redray.khadoomhome.all_users.Activites.Login_Activity">


    <FrameLayout
        android:id="@+id/main_reg_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingBottom="20dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white_one"
            android:layout_marginTop="70dp"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="85dp"
                android:layout_marginBottom="30dp"
                android:layout_gravity="center_horizontal"
                android:weightSum="3">

                <ImageButton
                    android:id="@+id/facebook_reg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/facebook_register"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/twitter_reg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/twitter_register"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/google_reg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/google_register"
                    android:layout_weight="1" />



            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_corner"
                android:layout_marginBottom="10dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/username_reg"
                    android:layout_marginStart="5dp"
                    android:id="@+id/imageView1" />

                <EditText
                    android:id="@+id/username_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/light_blue"
                    android:textColorHint="@color/textbox_gray"
                    android:background="@android:color/transparent"
                    android:hint="@string/username_reg"
                    android:textSize="@dimen/text_default"
                    android:layout_toEndOf="@+id/imageView1" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/astric_edittxt"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_corner"
                android:layout_marginBottom="10dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/phone_reg"
                    android:layout_marginStart="5dp"
                    android:id="@+id/imageView2" />

                <EditText
                    android:id="@+id/mobile_Num_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textColor="@color/light_blue"
                    android:textColorHint="@color/textbox_gray"
                    android:background="@android:color/transparent"
                    android:hint="@string/phone_number"
                    android:textSize="@dimen/text_default"
                    android:layout_toEndOf="@+id/imageView2" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/astric_edittxt"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_corner"
                android:layout_marginBottom="10dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/password_reg"
                    android:layout_marginStart="5dp"
                    android:id="@+id/imageView3" />

                <EditText
                    android:id="@+id/password_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="@color/light_blue"
                    android:textColorHint="@color/textbox_gray"
                    android:background="@android:color/transparent"
                    android:hint="@string/password"
                    android:textSize="@dimen/text_default"
                    android:layout_toEndOf="@+id/imageView3"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/astric_edittxt"/>

            </RelativeLayout>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_corner"
                android:layout_marginBottom="10dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/password_reg"
                    android:layout_marginStart="5dp"
                    android:id="@+id/imageView4" />

                <EditText
                    android:id="@+id/confirm_pass_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:textAlignment="viewStart"
                    android:inputType="textPassword"
                    android:padding="10dp"
                    android:textColor="@color/light_blue"
                    android:textColorHint="@color/textbox_gray"
                    android:background="@android:color/transparent"
                    android:hint="@string/confirm_password"
                    android:textSize="@dimen/text_default"
                    android:layout_toEndOf="@+id/imageView4" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/astric_edittxt"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_corner"
                android:layout_marginBottom="10dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/mail_reg"
                    android:layout_marginStart="5dp"
                    android:id="@+id/imageView5" />

                <EditText
                    android:id="@+id/mail_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColor="@color/light_blue"
                    android:textColorHint="@color/textbox_gray"
                    android:background="@android:color/transparent"
                    android:hint="@string/mail"
                    android:textSize="@dimen/text_default"
                    android:layout_toEndOf="@+id/imageView5" />


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/astric_edittxt"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_corner"
                android:layout_marginBottom="10dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/calendar_reg"
                    android:layout_marginStart="5dp"
                    android:id="@+id/imageView6" />

                <TextView
                    android:id="@+id/data_birth_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="10dp"
                    android:textColor="@color/light_blue"
                    android:textColorHint="@color/textbox_gray"
                    android:background="@android:color/transparent"
                    android:hint="@string/date_of_birth"
                    android:textSize="@dimen/text_default"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/imageView6"/>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_corner"
                android:weightSum="2">


                <EditText
                    android:id="@+id/location_reg"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.5"
                    android:text="@string/location_information"
                    android:gravity="start"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:textColorHint="@color/textbox_gray"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/textbox_gray"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>



                <ImageButton
                    android:id="@+id/location_btn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:layout_gravity="center"
                    android:background="@drawable/map_icon"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:background="@drawable/astric_edittxt"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:background="@color/light_blue" />



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edittext_corner"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/country_reg"
                android:layout_marginStart="5dp"
                android:id="@+id/imageView15" />



                <Spinner
                    android:id="@+id/spinner_country"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/gray_light"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_toEndOf="@+id/imageView15"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/astric_edittxt"/>



        </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/edittext_corner"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/country_reg"
                    android:layout_marginStart="5dp"
                    android:id="@+id/imageView16" />



                <Spinner
                    android:id="@+id/spinner_city"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginEnd="15dp"
                    android:background="@color/gray_light"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_toEndOf="@+id/imageView16"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/astric_edittxt"/>



            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_corner"
                android:layout_marginBottom="10dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/address_logo"
                    android:layout_marginStart="5dp"
                    android:id="@+id/imageView7" />

                <EditText
                    android:id="@+id/address_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/light_blue"
                    android:textColorHint="@color/textbox_gray"
                    android:background="@android:color/transparent"
                    android:hint="@string/address"
                    android:textSize="@dimen/text_default"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/imageView7"/>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/astric_edittxt"/>

            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false"
                android:weightSum="2">



                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_corner"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="8dp">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/country_reg"
                        android:layout_marginStart="5dp"
                        android:id="@+id/imageView8" />

                    <EditText
                        android:id="@+id/neighborhood_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/light_blue"
                        android:textColorHint="@color/textbox_gray"
                        android:background="@android:color/transparent"
                        android:hint="@string/neighborhood"
                        android:textSize="@dimen/text_default"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@+id/imageView8"/>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/astric_edittxt"/>

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_corner"
                    android:layout_marginBottom="10dp">


                    <EditText
                        android:id="@+id/build_num_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/light_blue"
                        android:textColorHint="@color/textbox_gray"
                        android:background="@android:color/transparent"
                        android:hint="@string/building_number"
                        android:textSize="@dimen/text_default"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/astric_edittxt"/>

                </RelativeLayout>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:weightSum="2"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:baselineAligned="false">


                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_corner"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="8dp">


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:background="@drawable/apartment_number_reg"
                        android:layout_marginStart="5dp"
                        android:id="@+id/imageView9" />

                    <EditText
                        android:id="@+id/apart_num_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textColor="@color/light_blue"
                        android:textColorHint="@color/textbox_gray"
                        android:background="@android:color/transparent"
                        android:hint="@string/apartment_number"
                        android:textSize="@dimen/text_default"
                        android:layout_toEndOf="@+id/imageView9" />

                </RelativeLayout>




                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/edittext_corner"
                    android:layout_marginBottom="10dp">



                    <EditText
                        android:id="@+id/floor_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textColor="@color/light_blue"
                        android:textColorHint="@color/textbox_gray"
                        android:background="@android:color/transparent"
                        android:hint="@string/floor"
                        android:textSize="@dimen/text_default" />

                </RelativeLayout>


            </LinearLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_corner"
                android:layout_marginBottom="10dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/phone_reg"
                    android:layout_marginStart="5dp"
                    android:id="@+id/imageView10" />

                <EditText
                    android:id="@+id/additional_phone_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:inputType="phone"
                    android:padding="10dp"
                    android:textColor="@color/light_blue"
                    android:textColorHint="@color/textbox_gray"
                    android:background="@android:color/transparent"
                    android:hint="@string/additional_phone"
                    android:textSize="@dimen/text_default"
                    android:layout_toEndOf="@+id/imageView10" />

            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_corner"
                android:layout_marginBottom="10dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/water_reg"
                    android:layout_marginStart="5dp"
                    android:id="@+id/imageView11" />

                <EditText
                    android:id="@+id/water_num_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:inputType="number"
                    android:padding="10dp"
                    android:textColor="@color/light_blue"
                    android:textColorHint="@color/textbox_gray"
                    android:background="@android:color/transparent"
                    android:hint="@string/water_meter_number"
                    android:textSize="@dimen/text_default"
                    android:layout_toEndOf="@+id/imageView11" />

            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/edittext_corner"
                android:layout_marginBottom="10dp">


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@drawable/landmark_reg"
                    android:layout_marginStart="5dp"
                    android:id="@+id/imageView12" />

                <EditText
                    android:id="@+id/landmark_reg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:inputType="text"
                    android:padding="10dp"
                    android:textColor="@color/light_blue"
                    android:textColorHint="@color/textbox_gray"
                    android:background="@android:color/transparent"
                    android:hint="@string/landmark"
                    android:textSize="@dimen/text_default"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_toEndOf="@+id/imageView12"/>

            </RelativeLayout>



            <Button
                android:id="@+id/register_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/register"
                android:textColor="@color/white_one"
                android:textSize="20sp"
                android:background="@drawable/button_blue"
                android:layout_marginBottom="20dp"/>


        </LinearLayout>




        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@drawable/profile_pic"
            android:layout_gravity="center_horizontal" />

        <!--<ImageView-->
            <!--android:id="@+id/profile_img"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:src="@drawable/profile_pic" />-->

    </FrameLayout>


</ScrollView>
