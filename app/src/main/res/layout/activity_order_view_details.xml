<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scroll_order_detail_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.redray.khadoomhome.tickets.Activities.Create_new_Ticket">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/create_ticket_lay"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/gray_light">


        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            card_view:cardElevation="15dp"
            card_view:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="@string/order_details"
                    android:textColor="@color/dark_blue"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/light_blue" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/number_of_order"
                    android:textColor="@color/textbox_gray"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/edittext_corner">


                    <EditText
                        android:id="@+id/num_order_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/light_blue"
                        android:textColorHint="@color/textbox_gray"
                        android:textSize="@dimen/text_default"
                        android:enabled="false"/>



                </RelativeLayout>



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/provider_name"
                    android:textColor="@color/textbox_gray"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/edittext_corner">


                    <EditText
                        android:id="@+id/provider_name_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/light_blue"
                        android:textColorHint="@color/textbox_gray"
                        android:textSize="@dimen/text_default"
                        android:enabled="false"/>



                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/visit_date"
                    android:textColor="@color/textbox_gray"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/edittext_corner">


                    <EditText
                        android:id="@+id/visit_date_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:inputType="date"
                        android:padding="10dp"
                        android:textColor="@color/light_blue"
                        android:textColorHint="@color/textbox_gray"
                        android:textSize="@dimen/text_default"
                        android:enabled="false"/>



                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/tecnical_name"
                    android:textColor="@color/textbox_gray"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:background="@drawable/edittext_corner">


                    <EditText
                        android:id="@+id/teck_name_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/light_blue"
                        android:textColorHint="@color/textbox_gray"
                        android:textSize="@dimen/text_default"
                        android:enabled="false"/>




                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="@string/mobile_number"
                    android:textColor="@color/textbox_gray"
                    android:textSize="15sp"
                    android:textStyle="bold" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/edittext_corner">


                    <EditText
                        android:id="@+id/mob_num_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textColor="@color/light_blue"
                        android:textColorHint="@color/textbox_gray"
                        android:textSize="@dimen/text_default"
                        android:enabled="false"/>


                </RelativeLayout>




                <Button
                    android:id="@+id/back_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/button_blue"
                    android:paddingEnd="50dp"
                    android:paddingStart="50dp"
                    android:text="@string/back"
                    android:textColor="@color/white_one"
                    android:textSize="15sp" />


            </LinearLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>


</ScrollView>
