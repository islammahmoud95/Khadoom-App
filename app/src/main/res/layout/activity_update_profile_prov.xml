<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/update_profile_scroll_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_light"
    tools:context="com.redray.khadoomhome.all_users.Activites.Login_Activity">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_blue"
            app:layout_heightPercent="45%" />


        <FrameLayout
            android:id="@+id/main_reg_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:paddingEnd="20dp"
            android:paddingStart="20dp"
            android:paddingTop="15dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="70dp"
                android:background="@color/white_one"
                android:orientation="vertical"
                android:paddingEnd="20dp"
                android:paddingStart="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="75dp"
                    android:text="@string/upload_image"
                    android:gravity="center"
                    android:textColor="@color/light_blue"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="@string/personal_info"
                    android:textColor="@color/light_blue"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_corner">


                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/username_reg" />

                    <EditText
                        android:id="@+id/username_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/imageView1"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:hint="@string/username_reg"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/light_blue"
                        android:textColorHint="@color/textbox_gray"
                        android:textSize="@dimen/text_default" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/astric_edittxt" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext_corner">


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/phone_reg" />

                    <EditText
                        android:id="@+id/mobile_Num_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/imageView2"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:hint="@string/phone_number"
                        android:inputType="phone"
                        android:padding="10dp"
                        android:textColor="@color/light_blue"
                        android:textColorHint="@color/textbox_gray"
                        android:textSize="@dimen/text_default" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/astric_edittxt"
                        android:contentDescription="@string/app_name" />

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext_corner">


                    <ImageView
                        android:id="@+id/imageView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/mail_reg" />

                    <EditText
                        android:id="@+id/mail_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/imageView5"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:hint="@string/mail"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:textColor="@color/light_blue"
                        android:textColorHint="@color/textbox_gray"
                        android:textSize="@dimen/text_default"
                        android:enabled="false"/>


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/astric_edittxt" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext_corner">


                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/company_name_reg"
                        android:contentDescription="@string/app_name"/>

                    <EditText
                        android:id="@+id/company_name_upd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/imageView6"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:hint="@string/comp_nam"
                        android:inputType="textEmailAddress"
                        android:padding="10dp"
                        android:textColor="@color/light_blue"
                        android:textColorHint="@color/textbox_gray"
                        android:textSize="@dimen/text_default" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/astric_edittxt"
                        android:contentDescription="@string/app_name"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/edittext_corner">


                    <ImageView
                        android:id="@+id/imageView30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/license_number_reg"
                        android:contentDescription="@string/app_name"/>

                    <EditText
                        android:id="@+id/license_upd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imageView30"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:hint="@string/licen_number"
                        android:padding="10dp"
                        android:textColor="@color/light_blue"
                        android:textColorHint="@color/textbox_gray"
                        android:textSize="@dimen/text_default" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/astric_edittxt"
                        android:contentDescription="@string/app_name"/>

                </RelativeLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="25dp"
                    android:background="@color/light_blue" />


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:text="@string/location_information_line"
                    android:textColor="@color/light_blue"/>



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/light_blue" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_corner"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/country_reg" />


                    <Spinner
                        android:id="@+id/spinner_country"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="15dp"
                        android:layout_toEndOf="@+id/imageView15"
                        android:background="@color/gray_light"
                        android:gravity="center" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/astric_edittxt" />


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/edittext_corner"
                    android:orientation="horizontal">


                    <ImageView
                        android:id="@+id/imageView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/country_reg" />


                    <Spinner
                        android:id="@+id/spinner_city"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginEnd="15dp"
                        android:layout_toEndOf="@+id/imageView16"
                        android:background="@color/gray_light"
                        android:gravity="center" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/astric_edittxt" />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext_corner">


                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/address_logo" />

                    <EditText
                        android:id="@+id/address_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imageView7"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:hint="@string/address"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/light_blue"
                        android:textColorHint="@color/textbox_gray"
                        android:textSize="@dimen/text_default" />


                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/astric_edittxt" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_corner">


                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:background="@drawable/country_reg" />

                        <EditText
                            android:id="@+id/neighborhood_reg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentTop="true"
                            android:layout_toEndOf="@+id/imageView8"
                            android:background="@android:color/transparent"
                            android:gravity="start"
                            android:hint="@string/neighborhood"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColor="@color/light_blue"
                            android:textColorHint="@color/textbox_gray"
                            android:textSize="@dimen/text_default" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/astric_edittxt" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_corner">


                        <EditText
                            android:id="@+id/build_num_reg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:background="@android:color/transparent"
                            android:gravity="start"
                            android:hint="@string/building_number"
                            android:inputType="text"
                            android:padding="10dp"
                            android:textColor="@color/light_blue"
                            android:textColorHint="@color/textbox_gray"
                            android:textSize="@dimen/text_default" />


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:background="@drawable/astric_edittxt" />

                    </RelativeLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_corner">


                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="5dp"
                            android:background="@drawable/apartment_number_reg" />

                        <EditText
                            android:id="@+id/apart_num_reg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/imageView9"
                            android:background="@android:color/transparent"
                            android:gravity="start"
                            android:hint="@string/apartment_number"
                            android:inputType="number"
                            android:padding="10dp"
                            android:textColor="@color/light_blue"
                            android:textColorHint="@color/textbox_gray"
                            android:textSize="@dimen/text_default" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittext_corner">


                        <EditText
                            android:id="@+id/floor_reg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:gravity="start"
                            android:hint="@string/floor"
                            android:inputType="number"
                            android:padding="10dp"
                            android:textColor="@color/light_blue"
                            android:textColorHint="@color/textbox_gray"
                            android:textSize="@dimen/text_default" />

                    </RelativeLayout>


                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext_corner">


                    <ImageView
                        android:id="@+id/imageView10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/phone_reg" />

                    <EditText
                        android:id="@+id/additional_phone_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/imageView10"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:hint="@string/additional_phone"
                        android:inputType="phone"
                        android:padding="10dp"
                        android:textColor="@color/light_blue"
                        android:textColorHint="@color/textbox_gray"
                        android:textSize="@dimen/text_default" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext_corner">


                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/water_reg" />

                    <EditText
                        android:id="@+id/water_num_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/imageView11"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:hint="@string/water_meter_number"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textColor="@color/light_blue"
                        android:textColorHint="@color/textbox_gray"
                        android:textSize="@dimen/text_default" />

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/edittext_corner">


                    <ImageView
                        android:id="@+id/imageView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/landmark_reg" />

                    <EditText
                        android:id="@+id/landmark_reg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@+id/imageView12"
                        android:background="@android:color/transparent"
                        android:gravity="start"
                        android:hint="@string/landmark"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/light_blue"
                        android:textColorHint="@color/textbox_gray"
                        android:textSize="@dimen/text_default" />

                </RelativeLayout>

                <!--/////////////////////-->


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="@string/upload_image"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:baselineAligned="false"
                    android:weightSum="2">


                    <RelativeLayout
                        android:id="@+id/main_licen_layout"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginEnd="15dp">


                        <ImageView
                            android:id="@+id/license_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/upload_icon"
                            android:scaleType="fitCenter"
                            android:textColor="@color/black"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:layout_centerInParent="true"
                            android:contentDescription="@string/app_name" />

                    </RelativeLayout>



                    <RelativeLayout
                        android:id="@+id/main_owner_id_layout"
                        android:layout_width="0dp"
                        android:layout_height="120dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_marginEnd="15dp">


                        <ImageView
                            android:id="@+id/owner_id_img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/upload_icon"
                            android:scaleType="fitCenter"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            android:textColor="@color/black"
                            android:layout_centerInParent="true"
                            android:contentDescription="@string/app_name" />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/add_img_txt1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/upload_license"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/add_img_txt2"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/upload_owner_id"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:textSize="14sp" />
                </LinearLayout>


                <Button
                    android:id="@+id/register_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/button_blue"
                    android:text="@string/update"
                    android:layout_gravity="end"
                    android:textColor="@color/white_one"
                    android:textSize="16sp" />


            </LinearLayout>


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/profile_pic" />

            <!--<ImageView-->
            <!--android:id="@+id/profile_img"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_gravity="center_horizontal"-->
            <!--android:src="@drawable/profile_pic" />-->

        </FrameLayout>


    </android.support.percent.PercentRelativeLayout>

</ScrollView>
